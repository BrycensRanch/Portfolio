---
const { title, img, desc, url, badge,  badgeClasses = "badge badge-secondary mx-2", tags, target = '_blank' } = Astro.props;
import { Image } from '@astrojs/image/components';
---

<div class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]">
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img ? <Image src={img} alt={title} width={1280} height={720} class="max-w-full md:max-w-[13rem] rounded-lg" /> : undefined 
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class={badgeClasses}>{badge}</div>}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-end">
          {tags && tags.map((tag) => <div class="badge badge-outline">{tag}</div>)}
        </div>
      </div>
    </div>
  </a>
</div>
